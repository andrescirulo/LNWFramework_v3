	<servlet>
		<servlet-name>fileUploader</servlet-name>
		<servlet-class>net.latin.server.fileUpload.FileUploaderServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>fileUploader</servlet-name>
		<url-pattern>/__fileUploader</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>fileVisualizer</servlet-name>
		<servlet-class>net.latin.server.utils.reports.visualizer.ReportViewerServlet</servlet-class>
