<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <!-- Servlet Filters -->
	<filter>
		<filter-name>ApplicationFilter</filter-name>
		<filter-class>net.latin.server.security.filter.LnwApplicationFilter</filter-class>
	</filter>

	<!--  Servlet Filters Mappings -->
	<filter-mapping>
		<filter-name>ApplicationFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ApplicationFilter</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ApplicationFilter</filter-name>
		<url-pattern>*.gwt</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ApplicationFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ApplicationFilter</filter-name>
		<url-pattern>/__reportViewer</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ApplicationFilter</filter-name>
		<url-pattern>/imageFileUploader</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ApplicationFilter</filter-name>
		<url-pattern>/fotoRecover</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ApplicationFilter</filter-name>
		<url-pattern>/fileUploader</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ApplicationFilter</filter-name>
		<url-pattern>/__fileVisualizer</url-pattern>
	</filter-mapping>
  
  
    
  <!-- Struts Action Servlet -->
  	<filter>
		<filter-name>action</filter-name>
		<filter-class>
		    org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter
		</filter-class>
		<init-param>
			<param-name>application</param-name>
			<param-value>resources</param-value>
		</init-param>
		<init-param>
			<param-name>config</param-name>
			<param-value>struts-default.xml,struts-plugin.xml,struts.xml,struts-config-useCases.xml</param-value>
		</init-param>
		<init-param>
			<param-name>debug</param-name>
			<param-value>2</param-value>
		</init-param>
		<init-param>
			<param-name>detail</param-name>
			<param-value>2</param-value>
		</init-param>
		<init-param>
			<param-name>validate</param-name>
			<param-value>true</param-value>
		</init-param>
    </filter>
    <filter-mapping>
		<filter-name>action</filter-name>
		<url-pattern>*.do</url-pattern>
    </filter-mapping>
    <filter-mapping>
		<filter-name>action</filter-name>
		<url-pattern>*.gwt</url-pattern>
    </filter-mapping>
